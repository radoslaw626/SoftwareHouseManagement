@model IEnumerable<SoftwareHouseManagement.Models.Entities.Access>
@{
    ViewData["Title"] = "Accesses";
}
<div class="panel panel-default mt-5" style="width:auto">
    <div class="panel-heading">
        Dostępy
    </div>
    <div class="panel-body">
        <form>
            <table class="table">
                <tr>
                    <th>
                        Nazwa
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in (@Model))
                {
                    <tr>
                        <td>
                            @item.Name
                        </td>
                        <td>
                            @Html.ActionLink("Usuń", "DeleteAccessFromTeam", new { teamId = ViewBag.TeamId, accessId = item.Id })
                        </td>
                    </tr>
                }

            </table>
        </form>
    </div>

</div>

<div class="panel panel-default mt-5" style="width:auto">
    <div class="panel-heading">
        Dodaj nowy dostęp
    </div>
    <div class="panel-body">
        @using (Html.BeginForm("AddAccessForTeam","Teams", FormMethod.Post, new {}))
        {
            <div class="form-group row">
                <label for="inputEmail3" class="col-sm-2 col-form-label">Dostęp</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="inputEmail3" placeholder="dane dostępowe" name="accessName">
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-10">
                    <input type="hidden"name="teamId" value="@ViewBag.TeamId"/>
                    <button type="submit" class="btn btn-primary">Dodaj</button>
                </div>
            </div>
        }
    </div>

</div>