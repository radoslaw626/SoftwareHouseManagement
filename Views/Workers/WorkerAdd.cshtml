@using SoftwareHouseManagement.Models.Entities
@model SoftwareHouseManagement.Models.Entities.Worker

@{
    ViewData["Title"] = "Add new worker";
}

<div class="panel panel-default mt-5" style="width:auto">
    <div class="panel-heading">
        Dodawanie nowego pracownika
    </div>
    <div class="panel-body">
        <form method="post">
            <div class="form-group row">
                <label for="inputEmail3" class="col-sm-2 col-form-label">Email</label>
                <div class="col-sm-10">
                    <input type="email" class="form-control" id="inputEmail3" placeholder="Email", name="email">
                </div>
            </div>
            <div class="form-group row">
                <label for="inputPassword3" class="col-sm-2 col-form-label">Hasło</label>
                <div class="col-sm-10">
                    <input type="password" class="form-control" id="inputPassword3" placeholder="Hasło" asp-for="PasswordHash">
                </div>
            </div>
            <div class="form-group row">
                <label for="inputPassword3" class="col-sm-2 col-form-label">Imię</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="inputFirstName" placeholder="Imię" asp-for="FirstName">
                </div>
            </div>
            <div class="form-group row">
                <label for="inputPassword3" class="col-sm-2 col-form-label">Nazwisko</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="inputLastName" placeholder="Nazwisko" asp-for="LastName">
                </div>
            </div>
            <fieldset class="form-group">
                <div class="row">
                    <div class="col-md-2">
                        <label for="inputPassword3" class="col-form-label">Stanowisko</label>
                    </div>

                    <div class="col-sm-10">
                        <select class="form-control form-control-sm" aria-label="Default select example" name="positionId">
                            <option selected>Wybierz stanowisko</option>
                            @foreach (var item in (ViewBag.Positions as IEnumerable<Position>))
                            {
                                <option value="@item.Id">@item.Name</option>
                            }
                        </select>
                    </div>
                </div>
            </fieldset>
            <div asp-validation-summary="All"></div>
            <div class="form-group row">
                <div class="col-sm-10">
                    <button type="submit" class="btn btn-primary">Dodaj</button>
                </div>
            </div>
        </form>
    </div>

</div>
