@model SoftwareHouseManagement.Models.Entities.Responsibilities

<div class="panel panel-default mt-5" style="width:auto">
    <div class="panel-heading">
        Modyfikuj
    </div>
    <div class="panel-body">
        <form method="post">
            <div class="form-group row">
                <label for="inputEmail3" class="col-sm-2 col-form-label">Obowiązek</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="inputEmail3" placeholder="Nazwa obowiązku" name="name" value="@Model.Name">
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-10">
                    <input type="hidden" name="id" value="@Model.Id"/>
                    <input type="hidden" name="positionId" value="@ViewBag.PositionId"/>
                    <button type="submit" class="btn btn-primary">Zapisz</button>
                </div>
            </div>
        </form>
    </div>
</div>